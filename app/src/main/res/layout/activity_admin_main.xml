<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Admin_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Admin Menu"
            android:textColor="@color/black"
            android:textSize="50sp" />
        <LinearLayout
            android:orientation="horizontal"
android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu1"
                    android:layout_centerHorizontal="true"

                    android:text="Manage Candidate"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu1"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/candidates"

                    android:contentDescription="s"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu3"
                    android:layout_centerHorizontal="true"

                    android:text="Show all Users"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu3"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="s"
                    android:scaleType="fitCenter"
                    android:src="@drawable/question" />


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu4"
                    android:layout_centerHorizontal="true"

                    android:text="Manage Vote"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu4"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/register"
                    android:contentDescription="s"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu2"
                    android:layout_centerHorizontal="true"

                    android:text="Declare Result"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu2"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ballot"
                    android:contentDescription="s"/>


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu5"
                    android:layout_centerHorizontal="true"

                    android:text="View Vote"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu5"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/monitor"
                    android:contentDescription="s"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="168dp"
                android:layout_height="145dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu6"
                    android:layout_centerHorizontal="true"

                    android:text="Register Admin"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif-black" />

                <ImageButton
                    android:id="@+id/menu6"
                    android:layout_width="117dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_person"
                    android:contentDescription="s"/>


            </RelativeLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="Log out"
            android:textColor="@color/white" />
    </LinearLayout>


</ScrollView>